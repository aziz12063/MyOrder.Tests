 @inherits LayoutComponentBase

<RadzenLayout>
    <RadzenHeader>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
            <CascadingValue Value=this>
                <RadzenSidebarToggle Click="@(() => sidebar1Expanded = !sidebar1Expanded)" />
                <RadzenLabel  Text=@Name />
            </CascadingValue>

        </RadzenStack>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@sidebar1Expanded">
        <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Général" Click="() => OpenComponent(typeof(General))" Icon="home" />
            <RadzenPanelMenuItem Text="Ventes" Click="() => OpenComponent(typeof(Ventes))" Icon="account_box" />
            <RadzenPanelMenuItem Text="Raison de blocage" Icon="home" />
            <RadzenPanelMenuItem Text="Cache" Icon="account_box" />
            <RadzenPanelMenuItem Text="Autorisations" Icon="home" />
            <RadzenPanelMenuItem Text="Connexions" Icon="account_box" />
            <RadzenPanelMenuItem Text="Utilisateurs" Icon="home" />
            <RadzenPanelMenuItem Text="JPG" Icon="account_box" />
            <RadzenPanelMenuItem Text="OMS" Icon="home" />
            <RadzenPanelMenuItem Text="Paiements" Icon="account_box" />
        </RadzenPanelMenu>
        <div class="rz-p-4">
            Sidebar
        </div>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
    <RadzenFooter>
        Footer
    </RadzenFooter>
</RadzenLayout>


