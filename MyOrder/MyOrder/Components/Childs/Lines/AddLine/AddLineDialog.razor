<MudDialog Class="add-basket-dialog-modal">
    <TitleContent>
        <MudText Typo="Typo.h5">Ajout d'article</MudText>
    </TitleContent>
    <DialogContent>
        <MudTabs Class="tabfix"
                 AlwaysShowScrollButtons="false"
                 Centered="true"
                 KeepPanelsAlive="true"
                 @bind-ActivePanelIndex="CurrentTab">

            <MudTabPanel Text="Ajout"
                         Icon="@Icons.Material.Filled.AddCircle">
                <AddLineTab @ref="AddLineTab"/>
            </MudTabPanel>

            <MudTabPanel Text="Top Ventes"
                         Icon="@Icons.Material.Filled.TrendingUp">
                <BestSellersTab ItemClicked="ItemClicked"/>
            </MudTabPanel>

            <MudTabPanel Text="Commandes/Devis"
                         Icon="@Icons.Material.Filled.ShoppingCart">
               <OrderedItemsTab ItemClicked="ItemClicked"/>
            </MudTabPanel>

            @*             <MudTabPanel Text="Devis"
            Icon="@Icons.Material.Filled.Description">
            <MudText>Devis</MudText>
            </MudTabPanel> *@

            <MudTabPanel Text="Recherche"
                         Icon="@Icons.Material.Filled.Search">
                <SearchItemsTab ItemClicked="ItemClicked"/>
            </MudTabPanel>

            <MudTabPanel Text="Saisie Libre"
                         Icon="@Icons.Material.Filled.Edit">
                <FreeText @ref="FreeText"/>
            </MudTabPanel>

        </MudTabs>
    </DialogContent>
    <DialogActions>
        @if (CurrentTab == 0)
        {
            <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="CommitNewLineAndClose">AJOUTER</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Success" OnClick="CommitNewLine">CONTINUER</MudButton>
            <MudButton Variant="Variant.Text" Color="Color.Error" OnClick="ResetLine">ANNULER</MudButton>
        }
        else if(CurrentTab == 4)
        {
            <MudButton Variant="Variant.Filled" Color="Color.Warning" StartIcon="@Icons.Material.Filled.Add" OnClick="OnTextSubmited">Ajouter</MudButton>
        }
    </DialogActions>
</MudDialog>