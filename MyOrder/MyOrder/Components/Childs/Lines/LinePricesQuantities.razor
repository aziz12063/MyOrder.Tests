<!--Tarification-->
<GenericMudSelect Variant="Variant.Outlined"
                  T="BasketValueDto"
                  @bind-BoundValue="DiscountTypeValue"
                  Field="BasketLine!.DiscountType"
                  Items="BasketLine.DiscountTypes" />

<!--Description-->
<GenericTextField Field="@BasketLine!.DiscountDescription"
                  @bind-BoundValue="DiscountDescriptionValue" />

<!--Remise sup-->
<MudGrid>
    <MudItem xs="6">
        <GenericTextField Field="@BasketLine!.DiscountRate"
                          @bind-BoundValue="DiscountRateValue" />
    </MudItem>
    <MudItem xs="6">

        <!--PU HT-->
        <GenericTextField Field="@BasketLine!.DiscountPrice"
                          @bind-BoundValue="DiscountPriceValue" />
    </MudItem>
</MudGrid>

<!--the new Grid-->
<MudStack Class="pa-1">
    <MudDataGrid T="BasketPriceLine" Items="@BasketLine.Prices"
                 Bordered="true"
                 SortMode="@SortMode.None"
                 Striped="true"
                 Hover="true"
                 Dense="true"
                 Elevation="2"
                 Class="mx-n3"
                 RowStyleFunc="((item, x) => RowStyleFunc(item, x ,BasketLine))">
        <Columns>
            <PropertyColumn Property="x => x == null? 0 : x.Quantity"
                            Title="Quantity"
                            CellClass="pa-1 ma-1" />
            <PropertyColumn Property="x => x == null? 0 : x.CatalogPrice"
                            Title="Prix Cat."
                            CellClass="pa-1 ma-1" />
            <PropertyColumn Property="x => x == null? 0 : x.DiscountPrice"
                            Title="Prix Rem." />
            <PropertyColumn Property="x => x == null? 0 : x.MultiplePrice"
                            Title="Prix / 25"
                            CellClass="pa-1 ma-1" />
            <PropertyColumn Property="x => x == null? 0 : x.DiscountRate"
                            Title="% Dégress."
                            CellClass="pa-1 ma-1" />
        </Columns>
    </MudDataGrid>
</MudStack>

