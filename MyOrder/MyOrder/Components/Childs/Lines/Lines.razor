                                          Variant="Variant.Outlined"
                                          ReadOnly="true"
                                          Value="@context.Item.QuantityAtPaletteThreshold?.Value">
                            </MudTextField>
                        </MudItem>
                    </MudGrid>
                    <MudGrid>
