@code {

    private void CloneBasket()
    {
        var basketId = generalInfoState?.Value?.GeneralInfo?.BasketId;
        if (!string.IsNullOrWhiteSpace(basketId))
        {
            dispatcher.Dispatch(
                new CreateBasketAction(new NewBasketRequestDto
                    { BasketId = basketId }));
        }
    }
}