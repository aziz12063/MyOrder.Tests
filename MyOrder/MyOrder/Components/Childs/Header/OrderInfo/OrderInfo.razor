@inherits LoadableComponent

<MudItem xs="12" sm="6" md="3">
    <MudPaper MinWidth="300px;" FlexGow="1" Variant="Variant.Filled" Color="Color.Primary" Class="flexible-paper" Style="">
        <MudStack Wrap="Wrap.Wrap" StretchItems="StretchItems.All" AlignItems="AlignItems.Start" Justify="Justify.Center" Spacing="3" Row="false">
            <MudText Typo="Typo.h6" Color="Color.Secondary">Commande</MudText>

            <!-- Contact Client -->
            <MudText Typo="Typo.subtitle1">Contact client</MudText>
            <MudField Variant="Variant.Text">@SelectedClient</MudField>

            <MudSelect Label="Client Name" T="string" Variant="Variant.Outlined" @bind-Value="SelectedContact">
                <MudSelectItem T="string" Value="@SelectedContact"/>
            </MudSelect>
            
            <MudStack Row="true" Spacing="1">
                <MudIconButton Icon="@Icons.Material.Filled.Phone" />
                <MudTextField Value="@BsktOrderInfo.Contact.Phone" ReadOnly="true" />
                <MudIconButton Icon="@Icons.Material.Filled.SpeakerPhone" />
                <MudTextField Value="@BsktOrderInfo.Contact.CellularPhone" ReadOnly="true" />
            </MudStack>
            <MudTextField Label="Email" Value="@BsktOrderInfo.Contact.Email" ReadOnly="true" />
            
            <!-- Secteur d'activité -->
            <MudText Typo="Typo.subtitle1">Secteur d'activité</MudText>
            <MudField>@BsktOrderInfo.ActivityArea</MudField>


            
            <!-- Informations générales -->
            <MudText Typo="Typo.subtitle1">Informations générales</MudText>
            <MudSelect Label="Canal de vente" @bind-Value="BsktOrderInfo.SalesOriginId">
                <SalesOriginsSelect/>
            </MudSelect>
            @*
            <MudSelect Label="Type de trans." Value="NOR - Commande normale">
            <MudSelectItem Value="NOR - Commande normale">NOR - Commande normale</MudSelectItem>
            </MudSelect>
            <MudTextField Label="Référence Client" />
            <MudTextField Label="Commande Web" />
            
            
            <!-- Notes de RC -->
            <MudText Typo="Typo.subtitle1">Notes de RC</MudText>
            <MudTextField Placeholder="Notes de RC" Lines="4" /> *@

        </MudStack>
    </MudPaper>
</MudItem>

