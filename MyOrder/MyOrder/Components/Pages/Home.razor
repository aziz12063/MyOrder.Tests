@using MyOrder.Components.Childs.Header
@using MyOrder.Components.Childs.Lines
@using MyOrder.Services

@page "/Basket/{BasketId}"
@inject BasketService BasketService

<PageTitle>MyOrder</PageTitle>

<MudContainer Class="mt-14 px-14" MaxWidth="MaxWidth.ExtraLarge">
    <Header />
    <Lines />
</MudContainer>

@code
{
    [Parameter]
    public string? BasketId { get; set; }

    protected override void OnParametersSet()
    {
        if(string.IsNullOrWhiteSpace(BasketId))
            throw new ArgumentNullException(nameof(BasketId)); //Refactor this to a notification

        BasketService.BasketId = BasketId;
    }
}
