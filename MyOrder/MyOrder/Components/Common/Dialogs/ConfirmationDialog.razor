<MudDialog>
    <DialogContent>
        @Content
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Error" OnClick="Cancel" Size="Size.Small">Annuler</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit" Size="Size.Small">Confirmer</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    [Parameter]
    public EventCallback OnConfirmation { get; set; }
    [Parameter]
    public string Content { get; set; }

    private void Submit() 
    {
        OnConfirmation.InvokeAsync();
        MudDialog.Close(DialogResult.Ok(true));
    }
    private void Cancel() => MudDialog.Cancel();
}