@using MyOrder.Shared.Dtos.SharedComponents
@inherits GenericInputBase<DateTime?>

@if (Field is not null && !Hidden)
{
    <MudTooltip RootStyle="width:100%"
                Text="@TooltipText"
                Placement="Placement.Top">
        <MudDatePicker ShowToolbar="false"
                       Label="@FieldLabel()"
                       Required="Required"
                       Error="Error"
                       ErrorText="@Field.Error"
                       ReadOnly="InternalReadOnly"
                       Disabled="InternalReadOnly"
                       Clearable="true"
                       DateFormat="d"
                       @bind-Date="ValueProperty"
                       @bind-Date:after="OnBindValueAfter" />
    </MudTooltip>
}