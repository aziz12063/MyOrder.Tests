@using MyOrder.Shared.Dtos.SharedComponents
@inherits GenericInputBase<bool?>

@if (Field is not null && !Hidden)
{
    <MudTooltip RootStyle="width:100%"
                Text="@TooltipText"
                Placement="Placement.Top">
        <MudCheckBox T="bool?"
                     Size="Size"
                     Dense="Dense"
                     Style="display:inline-block;"
                     LabelPlacement="Placement.End"
                     Required="Required"
                     Error="Required"
                     ReadOnly="InternalReadOnly"
                     Disabled="InternalReadOnly"
                     Value="ValueProperty"
                     ValueChanged="ValueChangedHandler">
            <ChildContent>
                @if (!HideLabel)
                {
                    <MudText Typo="Typo">@Field?.Name</MudText>
                }
            </ChildContent>
        </MudCheckBox>
    </MudTooltip>
}

@code
{
    [Parameter]
    public Typo Typo { get; set; } = Typo.body2;
    [Parameter]
    public Size Size { get; set; } = Size.Small;
    [Parameter]
    public bool Dense { get; set; } = true;
}