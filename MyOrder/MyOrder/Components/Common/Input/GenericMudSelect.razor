@typeparam T
@inherits GenericInputBase<T>

@if (Field is not null && !Hidden)
{
    <MudTooltip RootStyle="width:100%"
                Text="@TooltipText"
                Placement="Placement.Top">
        <MudSelect T="T"
                   Typo="Typo.subtitle2"
                   Class="@Class"
                   Label="@FieldLabel()"
                   ShrinkLabel="true"
                   Margin="Margin"
                   Dense="true"
                   Variant="@Variant"
                   FullWidth="true"
                   Required="Required"
                   Error="Required || !string.IsNullOrWhiteSpace(Field!.Error)"
                   ErrorText="@Field!.Error"
                   ReadOnly="InternalReadOnly || OnlyForDisplay"
                   Disabled="InternalReadOnly || OnlyForDisplay"
                   Value="ValueProperty"
                   ValueChanged="OnValueChanged"
                   OnClose="DropDownClosedHandler"
                   OnOpen="DropDownOpenedHandler">
            @if (Items is not null)
            {
                foreach (var item in Items)
                {
                    if (item is BasketValueDto basketItem)
                    {
                        <MudTooltip Text="@basketItem.Description"
                                    Inline="false"
                                    RootStyle="width:100%;">
                            <MudSelectItem Value="@basketItem">
                                @DisplayedValue(basketItem, DropdownItemsDisplay)
                            </MudSelectItem>
                        </MudTooltip>
                    }
                    else
                    {
                        <MudSelectItem Value="@item" />
                    }
                }
            }
        </MudSelect>
    </MudTooltip>
}