@typeparam T
@inherits GenericInputBase<T>

@if (Field is not null && !Hidden)
{
    <MudTooltip RootStyle="width: 100%;"
                Text="@TooltipText">
        <MudTextField @ref="TextField"
                      T="T"
                      Typo="Typo"
                      Margin="Margin"
                      Variant="Variant"
                      Lines="Lines"
                      ShrinkLabel="ShrinkLabel"
                      Format="@Format"
                      Culture="@Culture"
                      Class="@cssClass"
                      Label="@FieldLabel()"
                      Required="Required"
                      RequiredError="Ce champ est obligatoire"
                      Error="Required || !string.IsNullOrWhiteSpace(Field!.Error)"
                      ErrorText="@Field!.Error"
                      ReadOnly="InternalReadOnly || OnlyForDisplay"
                      Disabled="InternalReadOnly || OnlyForDisplay"
                      Value="ValueProperty"
                      ValueChanged="ValueChangedHandler"
                      OnKeyDown="KeyDownHandler" />
    </MudTooltip>
}