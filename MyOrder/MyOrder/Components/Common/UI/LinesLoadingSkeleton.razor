<MudGrid Class="pt-1 mt-1 mb-5" Spacing="4">
    <MudItem xs="12">
        <MudPaper Class="px-4" Elevation="4">
            <MudStack Row="true">
                <MudSkeleton Width="45px" Height="75px" />
                <MudSkeleton Width="45px" Height="75px" />
                <MudSkeleton Width="45px" Height="75px" />
                <MudSkeleton Width="45px" Height="75px" />
                <MudSkeleton Width="45px" Height="75px" />
                <MudSpacer />
                <MudSkeleton Width="45px" Height="75px" />
                <MudSkeleton Width="45px" Height="75px" />
                <MudSkeleton Width="45px" Height="75px" />
            </MudStack>

            <MudStack Spacing="0">
                @for (int i = 0; i < 3; i++)
                {
                    <MudSkeleton Width="100%" Height="75px" />
                }
            </MudStack>

        </MudPaper>
    </MudItem>

    @for (int i = 0; i < 3; i++)
    {
        <MudItem xs="12" sm="4">
            <MudPaper Elevation="4" Class="pa-4">
                <MudSkeleton Width="40%" Height="50px" />
                <MudGrid Spacing="1">
                    @for(int i = 0; i < 8; i++)
                    {
                        <MudItem xs="6" Class="pr-2">
                            <MudSkeleton Width="100%" Height="60px" />
                        </MudItem>
                    }
                </MudGrid>
            </MudPaper>
        </MudItem>
    }

</MudGrid>
