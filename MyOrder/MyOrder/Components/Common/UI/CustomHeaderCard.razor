
<MudCard Elevation="Elevation" Class="pa-2 my-0">
    <MudCardHeader Class="px-2 py-1 my-n1">
        <CardHeaderContent>
            <MudStack Row="true" Spacing="0" StretchItems="StretchItems.Start" Class="pb-2">
                @HeaderContent
            </MudStack>
        </CardHeaderContent>
        <CardHeaderActions>
            @HeaderActions
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="py-0 px-1">
        @BodyContent
    </MudCardContent>
</MudCard>

@code {
    [Parameter, EditorRequired]
    public RenderFragment? HeaderContent { get; set; }
    [Parameter]
    public RenderFragment? HeaderActions { get; set; }

    [Parameter, EditorRequired]
    public RenderFragment? BodyContent { get; set; }

    [Parameter]
    public int Elevation { get; set; } = 2;
}
