<MudTooltip RootStyle="width:100%"
            Text="@TooltipText"
            Placement="Placement.Top"
            ShowOnFocus="false"
            ShowOnClick="false">
    @ChildContent
</MudTooltip>
@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string TooltipText { get; set; }
}