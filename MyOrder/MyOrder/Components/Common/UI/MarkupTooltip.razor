<MudTooltip RootStyle="width:100%">
    <TooltipContent>
        <MudText Typo="Typo.caption" Style="align-content:left !important;" Color="Color">
            @FieldUtility.MarkupStringHelper(Text, false)
        </MudText>
    </TooltipContent>
    <ChildContent>
        @ChildContent
    </ChildContent>
</MudTooltip>
@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public string? Text { get; set; }
    [Parameter]
    public Color Color { get; set; } = Color.Dark;
}
