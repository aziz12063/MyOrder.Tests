@if (!string.IsNullOrWhiteSpace(Text))
{
    <MudTooltip RootStyle="width:100%" Inline="false">
        <TooltipContent>
            <MudText Typo="Typo.caption"
                     Color="Color"
                     Style="align-content:left !important;">
                @FieldUtility.MarkupStringHelper(Text, false)
            </MudText>
        </TooltipContent>
        <ChildContent>
            @ChildContent
        </ChildContent>
    </MudTooltip>
}
else
{
    @ChildContent
}
@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public string? Text { get; set; }
    [Parameter]
    public Color Color { get; set; } = Color.Dark;
}
