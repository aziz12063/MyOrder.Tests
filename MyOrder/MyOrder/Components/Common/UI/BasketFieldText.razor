@if (string.IsNullOrEmpty(TextField?.Value))
    return;

<MudTooltip Text="@TextField.Name">
    <MudText Typo="Typo"
             Class="@Class"
             Color="FieldUtility.GetFieldColor(TextField)">@TextField.Value</MudText>
</MudTooltip>

@code {
    [Parameter, EditorRequired]
    public Field<string?>? TextField { get; set; }

    [Parameter]
    public Typo Typo { get; set; } = Typo.body1;
    [Parameter]
    public string Class { get; set; } = string.Empty;
}