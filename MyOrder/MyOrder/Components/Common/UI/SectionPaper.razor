@inherits MudPaper

<div class="header-cards-height" style="position: relative;">
    @if (IsLoading)
    {
        <MudSkeleton Class="overline-label mt-n3" Width="150px" Height="55px"/>
    }
    else
    {
        <MudText Typo="Typo.h6"
                 Color="Color.Primary"
                 Class="overline-label">@(!string.IsNullOrWhiteSpace(Title) ? Title : "NO_SECTION_TITLE")</MudText>
    }
    <MudPaper @onmouseenter="MouseEnterHandler"
              @onmouseleave="MouseLeaveHandler"
              Elevation="@currentElevation"
              Class="@($"{Class} header-cards-height pt-6 pb-2 px-4")"
              Style="@Style">
        @ChildContent
    </MudPaper>
</div>